<%- include('partials/header') -%>
<div class="jumbotron">
    <h1>This is the Edit Page</h1>
    <a href="/blogs" class="btn btn-dark btn-lg">Go Back</a>
</div>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <form action="/blogs/<%= blog._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="newBlog[title]" class="form-label">Edit Title</label>
                    <input type="text" class="form-control" name="newBlog[title]" id="title"
                        value="<%= blog.title %>" />
                </div>
                <div class="form-group">
                    <label for="newBlog[image]" class="form-label">Change Image</label>
                    <input type="url" class="form-control" name="newBlog[image]" id="image" value="<%= blog.image %>" />
                </div>
                <div class="form-group">
                    <label for="newBlog[body]" class="form-label">Edit Blog</label>
                    <textarea name="newBlog[body]" id="body" rows="15" class="form-control"><%= blog.body%></textarea>
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-primary btn-lg" />
                </div>
            </form>
        </div>
    </div>
</div>
<%- include('partials/footer') -%>