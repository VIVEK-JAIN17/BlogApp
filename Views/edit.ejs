<%- include('partials/header') -%>
<div class="jumbotron">
    <h1>This is the Edit Page</h1>
</div>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <form action="/blogs/<%= blog._id%>?_method=PUT" method="POST">
                <!-- <div class="form-group">
                    <input type="text" class="form-control" name="name" id="name" placeholder="Author Name" />
                </div> -->
                <div class="form-group">
                    <input type="text" class="form-control" name="newBlog[title]" id="title" value="<%= blog.title %>" />
                </div>
                <div class="form-group">
                    <input type="url" class="form-control" name="newBlog[image]" id="image" value="<%= blog.image %>" />
                </div>
                <div class="form-group">
                    <textarea name="newBlog[body]" id="body" rows="15" class="form-control"><%= blog.body%></textarea>
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-outline-primary btn-lg" />
                </div>
            </form>
        </div>
    </div>
</div>
<%- include('partials/footer') -%>