<%- include('../partials/header') -%>
<div class="jumbotron">
    <h1>Add new Comment to <%= blog.title %></h1>
</div>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-6">
            <form action="/blogs/<%= blog._id %>/comments" method="POST">
                <div class="form-group">
                    <textarea class="form-control" name="comment[comment]" id="comment" cols="30" rows="10"
                        placeholder="Write your Comment Here !"></textarea>
                </div>
                <div class="form-group text-center">
                    <input type="submit" class="btn btn-primary form-control" value="Post Comment" />
                </div>
            </form>
        </div>
    </div>
</div>

<%- include('../partials/footer') -%>