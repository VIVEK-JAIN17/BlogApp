<%- include('partials/header') -%>
<div class="jumbotron">
    <h1>This is the index page</h1>
</div>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-10">
            <% blogs.forEach((blog)=>{%>
            <h2><%= blog.title%></h2>
            <img class="img-fluid" src="<%= blog.image%>" alt="<%= blog.title%>">
            <div><%- blog.body.substring(0,100) -%></div>
            <h3><%= blog.author%></h3>
            <a href="/blogs/<%= blog._id%>" class="btn btn-outline-dark btn-sm">Read More</a>
            <%})%>
        </div>
    </div>
</div>
<%- include('partials/footer') -%>