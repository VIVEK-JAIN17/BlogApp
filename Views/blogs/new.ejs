<%- include('../partials/header') -%>
<div class="jumbotron">
    <h1>This is the new Page</h1>
</div>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <form action="/blogs" method="POST">
                <div class="form-group">
                    <label for="blog[title]" class="form-label">Title</label>
                    <input type="text" class="form-control" name="blog[title]" id="title" placeholder="Title"
                        required />
                </div>
                <div class="form-group">
                    <label for="blog[image]" class="form-label">Upload an Image</label>
                    <input type="url" class="form-control" name="blog[image]" id="image" placeholder="image URL"
                        required />
                </div>
                <div class="form-group">
                    <textarea name="blog[body]" id="body" rows="15" class="form-control"
                        placeholder="Write your Blog Here !" required></textarea>
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-primary btn-lg" />
                </div>
            </form>
        </div>
    </div>
</div>
<%- include('../partials/footer') -%>